% \begin{lstlisting}[caption={Ingredients Command with Optional Argument}]
% \ingredients[7]{
%     2 bar & Dark Chocolate (above \unit[70]{\%})\\
%     3 & Eggs\\
%     \unit[200]{ml} & Cream\\
%     \unit[40]{g} & Sugar\\
%     \unit[50]{g} & Butter
% }
